{
    "name": "simpede",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "workspaceFolder": "/simpede",
    "service": "app",
    "shutdownAction": "stopCompose",
    "postCreateCommand": "bash ./.devcontainer/setup.sh",
    "forwardPorts": [
        80,
        3306,
        8080
    ],
    "portsAttributes": {
        "80": {
            "label": "HTTP"
        },
        "3306": {
            "label": "MySQL"
        },
        "8080": {
            "label": "PHPMyAdmin"
        }
    }
}
